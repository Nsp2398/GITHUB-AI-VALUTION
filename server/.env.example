# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///./database/valuai.db

# Production (PostgreSQL) - uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/valuai_production
# DATABASE_URL=postgresql://username:password@your-db-host.amazonaws.com:5432/valuai

# Database Options
DATABASE_ECHO=False  # Set to True for SQL query logging

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External APIs (if needed)
MARKET_DATA_API_KEY=your_market_data_api_key
FINANCIAL_DATA_API_KEY=your_financial_data_api_key

# Email Configuration (for reports)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_HOURS=24

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Development/Production Flags
DEBUG=True
TESTING=False
